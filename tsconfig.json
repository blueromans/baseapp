{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node", "react-native"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "skipLibCheck": true,
    "jsx": "react-jsx"
  },
  "include": [
    "./src/**/*",
    "./src/@types/**/*",
    "index.d.ts",
    ".eslintrc.js",
    "jest.setup.js",
    "jest.config.js",
    "babel.config.js",
    "index.js"
  ],
  "exclude": ["**/node_modules", "**/Pods"]
}
